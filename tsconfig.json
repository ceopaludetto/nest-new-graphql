{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true
  },
  "include": ["src/**/*", "configuration/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "certs", "env"]
}
