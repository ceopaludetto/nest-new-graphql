{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "configuration/**/*",
    "scripts/**/*",
    "database.config.js",
    "jest.config.js",
    "babel.config.js"
  ],
  "exclude": ["node_modules", "dist", "coverage", "certs", "env"]
}
