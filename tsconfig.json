{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "src",
    "jsx": "preserve",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src/**/*",
    "configuration/**/*",
    "scripts/**/*",
    "database.config.js",
    "razzle.config.js",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage", "certs", "env"]
}
